<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.woods.amin.Activity.NotificationActivity"
    tools:showIn="@layout/activity_notification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contentNotification_tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="13dp"
            android:labelFor="@+id/contentNotification_tv_user_schedule"
            android:text="@string/scheduleAddFragment_tv_user" />

        <TextView
            android:id="@+id/contentNotification_tv_user_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/contentNotification_tv_user"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/editbox_background"
            android:hint="@string/scheduleAddFragment_et_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="13dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contentNotification_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="13dp"
            android:labelFor="@+id/contentNotification_tv_name_schedule"
            android:text="@string/scheduleAddFragment_tv_name" />

        <TextView
            android:id="@+id/contentNotification_tv_name_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/contentNotification_tv_name"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/editbox_background"
            android:hint="@string/scheduleAddFragment_et_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="13dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contentNotification_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:labelFor="@+id/contentNotification_tv_description"
            android:text="@string/scheduleAddFragment_tv_description" />

        <TextView
            android:id="@+id/contentNotification_tv_description_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/contentNotification_tv_description"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/editbox_background"
            android:hint="@string/scheduleAddFragment_et_description"
            android:lines="13"
            android:maxLines="13"
            android:minLines="5"
            android:scrollHorizontally="false"
            android:scrollbars="vertical" />
    </RelativeLayout>

</LinearLayout>
