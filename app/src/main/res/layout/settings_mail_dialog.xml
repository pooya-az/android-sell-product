<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settingsMailDialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:text="@string/settingsSecure_title_mail"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:visibility="gone"
        android:id="@+id/settingsMailDialog_et_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor" />

    <EditText
        android:visibility="gone"
        android:id="@+id/settingsMailDialog_et_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />

    <EditText
        android:visibility="gone"
        android:id="@+id/settingsMailDialog_et_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />

</LinearLayout>